<article class="peep">
  <div class="message">
    <%= @peep.message %>
  </div>
  <div class="peeptime">
    <%= @peep.datetime.strftime("%a %b %e %Y %r") %>
  </div>
  <div class="peepuser">
    Posted by: <%= @peep.user.username %>
  </div>
  <% unless @peep.replys.empty? %>
    <% @peep.replys.each do |reply| %>
      <article class="peep_reply">
        <div class="message">
          <%= reply.message %>
        </div>
        <div class="peeptime">
          <%= reply.datetime.strftime("%a %b %e %Y %r") %>
        </div>
        <div class="peepuser">
          Posted by: <%= reply.user.username %>
        </div>
      </article>
    <% end %>
  <% end %>
</article>

<h3>Post your reply</h3>

<form action="/peeps/newreply" method="post">
  <div>
    <label for="message">Message:</label>
    <textarea name="message"></textarea>
  </div>
  <div class="button">
    <button type="submit">Post</button>
  </div>
</form>
